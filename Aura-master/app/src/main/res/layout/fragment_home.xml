<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:background="@drawable/gradient">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Arhasi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/prof"
            android:scaleType="centerCrop"
            android:layout_marginLeft="300dp"/>

    <ImageView
        android:layout_below="@+id/profileImage"
        android:layout_centerHorizontal="true"
        android:id="@+id/mapView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/location"/>

        <GridLayout
            android:id="@+id/buttonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_below="@+id/profileImage"
            android:layout_marginTop="350dp">
            <ImageButton
                android:id="@+id/btnAlertFamily"
                android:text="Alert Family"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:src="@drawable/alert"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:id="@+id/btnMedicalConnect"
                android:text="Medical Connect"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_margin="5dp"
                android:src="@drawable/medical"
                android:textColor="@android:color/white"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:id="@+id/btnAskDoctor"
                android:text="Report Police"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_margin="5dp"
                android:backgroundTint="#ffc107"
                android:textColor="@android:color/white"
                android:src="@drawable/police"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:id="@+id/btnShoutOut"
                android:text="ShoutOut"
                android:layout_height="90sp"
                android:layout_width="90sp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:src="@drawable/shoutout"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:id="@+id/btnNearby"
                android:text="Nearby"
                android:layout_height="90sp"
                android:layout_width="90sp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:src="@drawable/nearby"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:id="@+id/btnBodyGuard"
                android:text="Emergency Contacts"
                android:layout_height="90sp"
                android:layout_width="90sp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:src="@drawable/emergency"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"/>
        </GridLayout>
    <Button
        android:layout_below="@id/buttonGrid"
        android:id="@+id/alertButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="SOS"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#b71c1c"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>